<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../layouts/head') %>
</head>
<body>
  <%- include('../layouts/header') %>
  <div class="container">
    <h2>Book collection</h2>
    <% books.forEach((items)=>{ %>
        <div class="books">
            <img class="cover_img" src="<%= items.image_url%>">
            <h1 class="title"><%= items.title%></h1>
            <h2 class="auther">written by: <%= items.author%></h2>
            <form action="/books/<%= items.id%>" method="get">
                <input class="btn details" type="submit" value="View Details">
            </form>
        </div>
    <% })%>
  </div>
  <%- include('../layouts/footer') %>
</body>
</html>