<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../../layouts/head') %>
</head>
<body>
    <%- include('../../layouts/header') %>
    <div class="container">
        <div class="books show">
            <% books.forEach(items => { %>
                <img src="<%= items.img %>" alt="<%= items.title%>">
                <h1 class="title"><%= books.title %></h1>
                <h2 class="auther">Written by: <%= items.author %></h2>
                <h2 class="isbn">ISBN: <%= items.isbn %></h2>
                <p class="discription"><%= items.description %></p>
                <form action="/books" method="post">
                    <input name="title" type="hidden" value="<%= items.title%>">
                    <input name="author" type="hidden" value="<%= items.author%>">
                    <input name="image" type="hidden" value="<%= items.image%>">
                    <input name="isbn" type="hidden" value="<%= items.isbn%>">
                    <input name="description" type="hidden" value="<%= items.description%>">
                    <input class="btn add_book" type="submit" value="Add Book">
                </form>
            <% }) %>
        </div>
    </div>
    <%- include('../../layouts/footer') %>
</body>
</html>


