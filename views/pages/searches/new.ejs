<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../../layouts/head') %>
</head>
<body>
  <%- include('../../layouts/header') %>
  <div class="container">
    <div class="title">
      <h4>Search by Title or Author</h4>
    </div>  
    <form action="/show" method="post">
      <div class="search_box">
        <input type="text" name="search" placeholder="Enter a title or author" required>
      </div>
      <div class="radio_container">
        <div class="radio_btn">
          <label class="lbl" for="title" >Title</label>
            <input type="radio" name="search" value="title" required>
        </div>
        <div class="radio_btn">
          <label class="lbl" for="author">Author</label>
            <input type="radio" name="search" value="author" required>
        </div>
      </div>
      <div class="search_btn">
        <button type="submit">Search the Google Books API</button>
      </div>
    </form>
  </div>
  <%- include('../../layouts/footer') %>
</body>
</html>